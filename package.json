{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=amberway-crm-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name amberway-crm",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply amberway-crm-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply amberway-crm-production",
    "db:seed": "wrangler d1 execute amberway-crm-production --local --file=./migrations/0002_seed_data.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "date-fns": "^4.1.0",
    "hono": "^4.12.2",
    "lucide": "^0.575.0"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
